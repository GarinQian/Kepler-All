<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/util
	http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<alias name="kepler.admin.status.task" alias="kepler.admin.task.status" />

	<bean id="kepler.admin.status.task" class="com.kepler.admin.status.impl.StatusTask">
		<constructor-arg ref="kepler.host.local" />
		<constructor-arg ref="kepler.admin.status.feeder" />
		<constructor-arg ref="kepler.admin.status.dynamic" />
	</bean>

	<bean id="kepler.admin.status.feeder" class="com.kepler.service.imported.ImportedServiceFactory" parent="kepler.service.imported.abstract">
		<constructor-arg index="0" value="com.kepler.admin.status.Feeder" />
	</bean>

	<bean id="kepler.admin.status.dynamic" class="com.kepler.admin.status.impl.ChainedStatus">
		<constructor-arg>
			<util:list>
				<ref bean="kepler.admin.status.dynamic.gc" />
				<ref bean="kepler.admin.status.dynamic.trace" />
				<ref bean="kepler.admin.status.dynamic.memory" />
				<ref bean="kepler.admin.status.dynamic.thread" />
				<ref bean="kepler.admin.status.dynamic.running" />
				<ref bean="kepler.admin.status.dynamic.request" />
				<ref bean="kepler.admin.status.dynamic.traffic" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="kepler.admin.status.static" class="com.kepler.admin.status.impl.ChainedStatus">
		<constructor-arg>
			<util:list>
				<ref bean="kepler.admin.status.static.gc" />
				<ref bean="kepler.admin.status.static.system" />
				<ref bean="kepler.admin.status.static.runtime" />
				<ref bean="kepler.admin.status.static.framework" />
			</util:list>
		</constructor-arg>
	</bean>

	<bean id="kepler.admin.status.dynamic.gc" class="com.kepler.admin.status.impl.StatusGC4Data" init-method="init" />

	<bean id="kepler.admin.status.dynamic.running" class="com.kepler.admin.status.impl.Status4Running" />

	<bean id="kepler.admin.status.dynamic.request" class="com.kepler.admin.status.impl.Status4Request">
		<constructor-arg ref="kepler.connection.counter" />
	</bean>

	<bean id="kepler.admin.status.dynamic.traffic" class="com.kepler.admin.status.impl.Status4Traffic">
		<constructor-arg ref="kepler.traffic" />
	</bean>

	<bean id="kepler.admin.status.dynamic.memory" class="com.kepler.admin.status.impl.Status4Memory" />

	<bean id="kepler.admin.status.dynamic.thread" class="com.kepler.admin.status.impl.Status4Thread">
		<constructor-arg ref="kepler.threads" />
	</bean>

	<bean id="kepler.admin.status.dynamic.trace" class="com.kepler.admin.status.impl.Status4Trace">
		<constructor-arg ref="kepler.trace.collector" />
	</bean>

	<bean id="kepler.admin.status.static.framework" class="com.kepler.admin.status.impl.Status4Kepler" init-method="init" />

	<bean id="kepler.admin.status.static.runtime" class="com.kepler.admin.status.impl.Status4Runtime" init-method="init" />

	<bean id="kepler.admin.status.static.system" class="com.kepler.admin.status.impl.Status4System" init-method="init" />

	<bean id="kepler.admin.status.static.gc" class="com.kepler.admin.status.impl.StatusGC4Name" init-method="init" />

</beans>